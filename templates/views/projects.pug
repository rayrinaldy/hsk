extends ../layouts/default

block var
	//- Meta tags property
	- var title = "Projects | Hegar Sumber Kreasi"
	- var description = "We are an Indonesian company started in 1990 based in Bandung and we cover all areas of the Indonesia with a wide customer base. Our staff have experience to provide steel services to the Construction Industry"
	- var author = 'Ray Rinaldy'
	- var keywords = 'indonesia, company, indonesia, company'

block css
	link(href="/styles/font-awesome.min.css", rel="stylesheet")

mixin post(post)
	.col-sm-6
		//- .project-wrapper.post(data-ks-editable=editable(user, { list: 'Post', id: post.id }))
			.project-img: img.img-responsive(src=post._.image.fit(500,250))
			.project-title: a(href='/projects/post/' + post.slug)= post.title
			.project-date Posted 
				if post.publishedDate
					| on #{post._.publishedDate.format('MMMM Do, YYYY')}
				if post.categories && post.categories.length
					|  in  
					each cat, i in post.categories
						a(href='/projects/' + cat.key)= cat.name
						if i < post.categories.length - 1
							| , 
						else
							|  
				if post.author
					|  by #{post.author.name.first}

			.project-detail!= post.content.brief
			if post.content.extended
				.project-button: a(href="/projects/post/" + post.slug target="_blank") Read more..

		.wrapper.post(data-ks-editable=editable(user, { list: 'Post', id: post.id }))
			.card.radius.shadowDepth1
				.card__image.border-tlr-radius
					img.img-responsive.border-tlr-radius(src=post._.image.fit(500,250))
				.card__content.card__padding
					.card__share
						.card__social
							a.share-icon.facebook(href='#')
								span.fa.fa-facebook
							a.share-icon.twitter(href='#')
								span.fa.fa-twitter
							a.share-icon.googleplus(href='#')
								span.fa.fa-google-plus
						a#share.share-toggle.share-icon(href='#')

					.card__meta
						if post.categories && post.categories.length 
							each cat, i in post.categories
								a(href='/projects/' + cat.key)= cat.name
								if i < post.categories.length - 1
									| , 
								else
									|  
						if post.publishedDate
							time #{post._.publishedDate.format('MMMM Do, YYYY')}

					article.card__article
						h3
							a(href='/projects/post/' + post.slug)= post.title
						p!= post.content.brief

				.card__action
					.card__author
						img(src='http://lorempixel.com/40/40/sports/', alt='user')
						.card__author-content
							if post.author
								| By #{post.author.name.first}

//- block intro
	.container
		h1= data.category ? data.category.name : 'Blog'

block content
	.header.not-home
		.info.not-home
				
			h1 OUR PROJECTS
	section.content
		.row
			.col-sm-8.col-md-9
				if filters.category && !data.category
					h3.text-muted Invalid Category.
				else
					if data.posts.results.length
						if data.posts.totalPages > 1
							h4.text-weight-normal Showing 
								strong #{data.posts.first}
								|  to 
								strong #{data.posts.last}
								|  of 
								strong #{data.posts.total}
								|  posts.
						else
							h4.text-weight-normal Showing #{utils.plural(data.posts.results.length, '* post')}.
						.blog
							.row
								each post in data.posts.results
									+post(post)
						
						if data.posts.totalPages > 1
							ul.pagination
								if data.posts.previous
									li: a(href='?page=' + data.posts.previous): span.glyphicon.glyphicon-chevron-left
								else
									li.disabled: a(href='?page=' + 1): span.glyphicon.glyphicon-chevron-left
								each p, i in data.posts.pages
									li(class=data.posts.currentPage == p ? 'active' : null)
										a(href='?page=' + (p == '...' ? (i ? data.posts.totalPages : 1) : p ))= p
								if data.posts.next
									li: a(href='?page=' + data.posts.next): span.glyphicon.glyphicon-chevron-right
								else
									li.disabled: a(href='?page=' + data.posts.totalPages): span.entypo.glyphicon.glyphicon-chevron-right
					else
						if data.category
							h3.text-muted There are no posts in the category #{data.category.name}.
						else
							h3.text-muted There are no posts yet.
			
			if data.categories.length
				.col-sm-4.col-md-3
					h2 Categories
					.list-group(style='margin-top: 70px;')
						a(href='/projects', class=!data.category ? 'active' : false).list-group-item All Categories
						each cat in data.categories
							a(href='/projects/' + cat.key, class=data.category && data.category.id == cat.id ? 'active' : false).list-group-item= cat.name
