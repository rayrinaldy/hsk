extends ../layouts/default

block var
	//- Meta tags property
	- var title = "Products | Hegar Sumber Kreasi"
	- var description = "We are an Indonesian company started in 1990 based in Bandung and we cover all areas of the Indonesia with a wide customer base. Our staff have experience to provide steel services to the Construction Industry"
	- var author = 'Ray Rinaldy'
	- var keywords = 'indonesia, company, indonesia, company'
	
block content
	.header.not-home
		.info.not-home
				
			h1 OUR PRODUCTS
			
	section.content
		.container
			if products.length
				each items in products
					h2= items.name
						if items.publishedDate
							.pull-right.text-muted= items._.publishedDate.format('Do MMM YYYY')
					
					.row.gallery-images
						if items.heroImage.exists
							.col-sm-4.col-md-4.gallery-image: img(src=items._.heroImage.limit(680,680)).img-rounded
							.col-sm-8.col-md-8: .row
								each image in items.images
									.col-xs-4.col-sm-4.col-md-3.gallery-image: img(src=image.limit(300,300)).img-rounded
						else
							each image in items.images
								.col-xs-6.col-sm-4.col-md-3.gallery-image: img(src=image.limit(300,300)).img-rounded
			else
				h3.text-muted There are no image galleries yet.
